---
import Layout from "~/layouts/Layout.astro";
import { ContactForm } from "~/components/composites/contact-form/ContactForm";
import ContactDetails from "~/components/composites/contact-details/ContactDetails.astro";
import { Text } from "~/components/primitives/text/Text";
---

<Layout title="Contact me">
  <main class="container pb-14 pt-32">
    <div class="mb-12">
      <Text element="h1" className="pb-6 text-5xl font-semibold"
        >Let's Connect!</Text
      >
      <Text className="text-xl font-semibold"
        >Whether you're interested in partnering on a project, seeking solutions
        to complex challenges, or simply want to chat about technology, don't
        hesitate to get in touch. Let's work together to turn ideas into
        reality.</Text
      >
    </div>
    <section class="flex w-full gap-x-20">
      <ContactDetails />
      <ContactForm client:visible />
    </section>
  </main>
</Layout>
